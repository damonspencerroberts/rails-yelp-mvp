<div class="container">
  <div class="d-flex p-2 bd-highlight justify-content-center">
    <h1>Add a Review</h1>
  </div>
  <div class="form-div">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, input_html: { placeholder: 'Content' }, label: false %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], label: false, prompt: "Rating" %>
      <%= f.button :submit, class: "btn-outline-success" %>
    <% end %>
  </div>
</div>

